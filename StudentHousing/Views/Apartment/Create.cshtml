@model StudentHousing.Models.ApartmentModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .hidden {
        display: none;
    }
</style>
<link rel="stylesheet" href="~/lib/jqueryui/jquery-ui.css" />

<div id="apsuccmsg" class="hidden alert alert-success">Apartment has been Created!</div>
<h2 class="text-center">Create Apartment</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AvailableFrom, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control" id="AvailableFrom">
                @Html.EditorFor(model => model.AvailableFrom, new { htmlAttributes = new { @class = "form-control", @id = "AvailableFrom" } })
                @Html.ValidationMessageFor(model => model.AvailableFrom, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="NumberOfBeds" class="control-label">Number of Available Beds:</label>
                <select class="form-control" id="NumberOfBeds" name="NumberOfBeds">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label">City:</label>
                <select id="CityId" name="CityId" class="form-control">
                    @for (int i = 0; i < ViewBag.brojac; i++)
                    {
                        <option value="i+1">@ViewBag.cities.Name</option>
                    }

                    </select>
                    <input asp-for="CityId" class="form-control" />
                    <span asp-validation-for="CityId" class="text-danger"></span>
</div>
            <div class="form-group">
                <input id="apartmentcreate" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (ViewBag.Success != null)
{
    <script type="text/javascript">
        window.onload = function () {
            $("#apsuccmsg").removeClass("hidden");
            $("#apsuccmsg").html("Apartment has Been Created!");
        };
    </script>
}

@if (ViewBag.Error != null)
{
    <script type="text/javascript">
        window.onload = function () {
            $("#apsuccmsg").removeClass("alert-success");
            $("#apsuccmsg").addClass("alert-danger");
            $("#apsuccmsg").html("Apartment Name is already in use!");
            $("#apsuccmsg").removeClass("hidden");
        };
    </script>
}

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/jqueryui/jquery-ui.js"></script>
<script>
    $(document).ready(function () {
        $("#AvailableFrom").datepicker({
            dateFormat: "dd-mm-yy",
            minDate: -0,
        });
    });

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

