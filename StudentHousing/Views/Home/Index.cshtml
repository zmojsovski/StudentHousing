@using StudentHousing.Models
@model ApartmentsViewModel

@{
    ViewData["Title"] = "Home Page";
}

<html>
<body style="margin-top:50px">



    <div class="search-bar">
        <div class="search-container">
            <span>@Html.DropDownList("CityDDL", Model.Cities)</span>
            

                <form id="form-block" caction="/action_page.php">
                    <input type="text" placeholder="Search by Apartment Name..." name="searchByName" />
                    <input type="date" placeholder="Search by Availability..." name="searchByDate" />
                    <select name="searchByBeds">
                        <option value="0">All</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                    <button type="submit"><i class="fa-search"></i>Search</button>
                </form>
        </div>
    </div>

    <div class="sorting-area">
        <div class="sorting-content">
            <span class="property-name">Name</span>
            <span class="property-name">Available From</span>
            <span class="property-name">Number of beds</span>
            <span class="property-name">
                Sort by price
                <a href="#">
                    <span id="sortPrice" class="glyphicon glyphicon-arrow-down"></span>
                </a>
            </span>
            <span class="property-name">
                Sort by rating
                <a href="#">
                    <span class="glyphicon glyphicon-arrow-down"></span>
                </a>
            </span>
        </div>
    </div>

    


    <div class="listOfApts">
        @foreach (var apt in Model.Apartments)
        {
            @*<li>@apt.Name</li>*@
            <div class="apartment-box">
                <div class="apartment-content">
                    <span class="apartment-item"><img src="~/images/apartment_img.png" /></span>
                    <span class="apartment-item">@apt.Name</span>
                    <span class="apartment-item">@apt.AvailableFrom.Date</span>
                    <span class="apartment-item">@apt.NumberOfBeds</span>
                    <span class="apartment-item">@apt.Price</span>
                    <span class="apartment-item">@apt.AverageRating</span>
                </div>
            </div>
        }
    </div>


    @*@RenderSection("Scripts", required: false)*@
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>
